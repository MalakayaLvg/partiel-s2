{% extends 'base.html.twig' %}

{% block title %}Hello LanguageController!{% endblock %}

{% block body %}
    <a class="btn btn-success" href="{{ path("app_language_create") }}">create language</a>

    <table class="table">
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Language</th>
            <th scope="col">Action</th>
        </tr>
        </thead>
        <tbody>
        {% for language in languages %}
        <tr>
            <th scope="row">{{ language.id }}</th>
            <td>{{ language.name }}</td>
            <td><a class="btn btn-danger" href="{{ path("app_language_delete",{id:language.id}) }}">delete</a></td>
        </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
